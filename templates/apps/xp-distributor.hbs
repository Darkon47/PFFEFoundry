<form autocomplete="off" onsubmit="event.preventDefault();">
  <div class="flexcol">
    {{!-- PC selector --}}
    <h2>{{localize "PF1.PCs"}}</h2>
    <div class="character-selector">
      {{#each combatants.characters as |combatant|}}
        <div class="actor flexcol{{#if combatant.toggled}} toggled{{/if}}" data-id="{{combatant.id}}">
          <img class="portrait" src="{{combatant.actorData.img}}">
          <span class="name">{{combatant.actorData.name}}</span>
          <input type="checkbox" {{checked combatant.toggled}}/>
        </div>
      {{/each}}
    </div>

    {{!-- NPC selector --}}
    <h2>{{localize "PF1.NPCs"}}</h2>
    <div class="npc-selector">
      {{#each combatants.npcs as |combatant|}}
        <div class="actor flexcol{{#if combatant.toggled}} toggled{{/if}}" data-id="{{combatant.id}}">
          <img class="portrait" src="{{combatant.actorData.img}}">
          <span class="name">{{combatant.actorData.name}}</span>
          <span class="xp">{{combatant.xp}} XP</span>
          <input type="checkbox" {{checked combatant.toggled}}/>
        </div>
      {{/each}}
    </div>

    {{!-- Options --}}
    <h2>{{localize "PF1.Options"}}</h2>
    <div class="options flexcol">
      <span>{{localize "PF1.Application.XPDistributor.Options.BonusExperience"}}</span>
      <input class="bonus-xp" type="number" value="0" />
    </div>

    {{!-- Show result --}}
    <div class="flexcol result">
      {{!-- Split XP --}}
      <div class="property xp-split">
        <i class="fas fa-people-arrows"></i> <span class="value">{{labels.xp.split}}</span>
      </div>

      {{!-- Total XP --}}
      <div class="property xp-total">
        <i class="fas fa-star"></i> <span class="value">{{labels.xp.total}}</span>
      </div>
    </div>

    {{!-- Buttons --}}
    <div class="flexrow">
      <button type="button" name="split-evenly">
        <i class="fas fa-people-arrows"></i> {{localize "PF1.Application.XPDistributor.SplitEvenly"}}
      </button>

      <button type="button" name="give-to-all">
        <i class="fas fa-star"></i> {{localize "PF1.Application.XPDistributor.GiveToAll"}}
      </button>

      <button type="button" name="cancel">
        {{localize "PF1.Cancel"}}
      </button>
    </div>
  </div>
</form>
